<article id="team">
<h2><%= i18n(@title, @locale) %></h2>
<% @team.each do |item|%>
<% section = item['section'] %>
<h3><%= i18n(section['name'], @locale) %></h3>
  <ul><% section['people'].each do |person| %>
    <li>
      <%= gravatar_tag(person['gravatar']) %>
      <%= i18n(person['name'], @locale) %>
<% affiliation = i18n(person['affiliation'], @locale) %>
<% if affiliation %>
      (<%= affiliation %>)
<% end %>
    </li>
  <% end %>
</ul>
<% end %>
</article>
